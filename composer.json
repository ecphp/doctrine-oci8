{
    "name": "ecphp/doctrine-oci8",
    "type": "library",
    "description": "Doctrine's OCI8 (Oracle) driver with cursor support.",
    "keywords": [
        "doctrine",
        "oci8",
        "oci",
        "oracle",
        "database",
        "cursor"
    ],
    "homepage": "https://github.com/ecphp/doctrine-oci8",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">= 7.4",
        "ext-oci8": "*",
        "doctrine/dbal": "^2.6"
    },
    "require-dev": {
        "drupol/php-conventions": "^3.0",
        "phpunit/phpunit": "^9",
        "symfony/dotenv": "^5",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "EcPhp\\DoctrineOci8\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\EcPhp\\DoctrineOci8\\": "tests/"
        }
    },
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run"
    }
}
