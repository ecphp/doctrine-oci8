{
    "name": "ecphp/doctrine-oci8",
    "description": "Doctrine's OCI8 (Oracle) driver with cursor support.",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "doctrine",
        "oci8",
        "oci",
        "oracle",
        "database",
        "cursor"
    ],
    "homepage": "https://github.com/ecphp/doctrine-oci8",
    "require": {
        "php": ">= 7.4",
        "ext-oci8": "*",
        "ext-pdo": "*",
        "doctrine/dbal": "^2.6"
    },
    "require-dev": {
        "ecphp/php-conventions": "^1",
        "phpunit/phpunit": "^9",
        "symfony/dotenv": "^5"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ecphp/php-conventions"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "EcPhp\\DoctrineOci8\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\EcPhp\\DoctrineOci8\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run"
    }
}
